@page
@model AndrecutEmanuelMedii.Pages.Wagons.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Wagon[0].TotalSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wagon[0].FreeSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wagon[0].Train)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Wagon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FreeSeats)
            </td>
            <td>
                @Html.Raw(item.Train != null ? $"{item.Train.OperatingCompany} - ID: {item.Train.ID}" : "n/a")
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
