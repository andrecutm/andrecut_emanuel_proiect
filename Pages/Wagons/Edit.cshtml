@page
@model AndrecutEmanuelMedii.Pages.Wagons.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Wagon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Wagon.ID" />
            <div class="form-group">
                <label asp-for="Wagon.TotalSeats" class="control-label"></label>
                <input asp-for="Wagon.TotalSeats" class="form-control" />
                <span asp-validation-for="Wagon.TotalSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wagon.FreeSeats" class="control-label"></label>
                <input asp-for="Wagon.FreeSeats" class="form-control" />
                <span asp-validation-for="Wagon.FreeSeats" class="text-danger"></span>
                <span class="text-danger">@ViewBag.FreeSeatsError</span>
            </div>
            <div class="form-group">
                <label asp-for="Wagon.TrainId" class="control-label"></label>
                <select asp-for="Wagon.TrainId" class="form-control" asp-items="ViewBag.TrainId"></select>
                <span asp-validation-for="Wagon.TrainId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GetExistingSelectedFacilitiesIds" class="control-label">Facilities</label>
                <select asp-for="GetExistingSelectedFacilitiesIds" multiple class="form-control" asp-items="ViewBag.Facilities"></select>
                <span asp-validation-for="GetExistingSelectedFacilitiesIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
