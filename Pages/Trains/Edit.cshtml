@page
@model AndrecutEmanuelMedii.Pages.Trains.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Train</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Train.ID" />
            <div class="form-group">
                <label asp-for="Train.OperatingCompany" class="control-label"></label>
                <input asp-for="Train.OperatingCompany" class="form-control" />
                <span asp-validation-for="Train.OperatingCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Train.DepartureDateTime" class="control-label"></label>
                <input asp-for="Train.DepartureDateTime" class="form-control" />
                <span asp-validation-for="Train.DepartureDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Train.TrainStationID" class="control-label"></label>
                <select asp-for="Train.TrainStationID" asp-items="ViewBag.TrainStationID" class="form-control"></select>
                <span asp-validation-for="Train.TrainStationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Train.DestinationTrainStationID" class="control-label"></label>
                <select asp-for="Train.DestinationTrainStationID" asp-items="ViewBag.DestinationTrainStationID" class="form-control">
                    <option value="">No destination</option>
                </select>
                <span asp-validation-for="Train.DestinationTrainStationID" class="text-danger"></span>
                <span class="text-danger">@ViewBag.DestinationTrainStationError</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
